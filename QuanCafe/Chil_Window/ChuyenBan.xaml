<Window x:Class="QuanCafe.Chil_Window.ChuyenBan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanCafe.Chil_Window"
        mc:Ignorable="d"
        Title="ChuyenBan" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Chọn Bàn"  Margin="10" Height="30" Width="100" TextAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
        <Border Grid.Row="1" Margin="5" BorderBrush="Silver" BorderThickness="1" CornerRadius="4">
            <DataGrid Margin="5" x:Name="list" >

            </DataGrid>
        </Border>
        <Grid Grid.Row="2">
            <Button x:Name="Cancel" Content="Cancel" Height="30" Margin="271,10,42.6,9.6" Click="Cancel_Click"   />
            <Button x:Name="OK" Content="OK" Height="30" Margin="72,10,241.6,9.6" Click="OK_Click"   />
        </Grid>
    </Grid>
</Window>
